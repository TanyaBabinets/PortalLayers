<h1>Жанры</h1>

<div id="buttons" style="margin-left:500px">

    <a asp-controller="Genre" asp-action="Create">Добавить жанр</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td id="font">
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    <a asp-action="Details" id="buttons" asp-route-id="@item.Id">Детали</a>
                </td>
                <td>
                    <a asp-action="Edit" id="buttons" asp-route-id="@item.Id">Изменить</a>
                </td>
                <td>
                    <a asp-action="Delete" id="buttons" asp-route-id="@item.Id">Удалить</a>
                </td>


            </tr>
        }
    </tbody>
</table>


