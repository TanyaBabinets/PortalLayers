@model PortalLayers.BLL.DTO.SongDTO

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Внести изменения</h1>


<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit" enctype="multipart/form-data">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="name" class="control-label"></label>
				<input asp-for="name" class="form-control" />
				<span asp-validation-for="name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="singer" class="control-label"></label>
				<input asp-for="singer" class="form-control" />
				<span asp-validation-for="singer" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="runtime" class="control-label"></label>
				<input asp-for="runtime" class="form-control" />
				<span asp-validation-for="runtime" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="size" class="control-label"></label>
				<input asp-for="size" input type="number" class="form-control" />
				<span asp-validation-for="size" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="file" class="labels" class="control-label"></label>

				<div id="FileFile">
					<input type="file" name="uploadedHref" id="AddFile" class="form-control" accept="audio/mpeg" />
					<audio controls src="@Html.DisplayFor(model => model.file)"></audio>
					<span asp-validation-for="file" class="text-danger"></span>
				</div>
			</div>



				<div class="form-group">

					<label asp-for="pic" class="labels" class="control-label"></label>
					<span asp-validation-for="pic" class="text-danger"></span>
				

				<img id="PosterAdd" style="width: 250px;
                           height: 300px" src="@Model.pic" />
				<div id="FileAdd">

					<input type="file" name="uploadedPreview" id="AddPoster" class="form-control" ; accept="image/jpeg, .jpg"  />
				
				</div>
			</div>

			@* <div class="form-group">
				<label asp-for="file" class="control-label"></label>
				<input type="file" name="uploadedHref" class="form-control" accept="audio/mpeg" />
				<span asp-validation-for="file" class="text-danger"></span>
			</div>

				<div class="form-group">
					<label asp-for="pic" class="control-label"></label>
					<input type="file" name="uploadedPreview" class="form-control" accept="image/jpeg, image/png" />
					<span asp-validation-for="pic" class="text-danger"></span>
				</div> *@

				


				<div class="form-group">
					<label asp-for="dateTime" class="control-label"></label>
					<input asp-for="dateTime" class="form-control" />
					<span asp-validation-for="dateTime" class="text-danger"></span>
				</div>


				<div class="form-group">

					<input type="hidden" value="@Context.Request.HttpContext.Session.GetString("Id")" asp-for="userId" class="form-control" />

				</div>

				<div class="form-group">
					<label asp-for="genreId" class="control-label"></label>
					<select class="form-control" asp-for="genreId" asp-items=ViewBag.ListGenres></select>
					<span asp-validation-for="genreId" class="text-danger"></span>
				</div>

				<div class="form-group">

					<input type="submit" value="Сохранить" id="buttons" asp-route-id="@Model.Id" class="buttons" />
				</div>
		</form>
	</div>
</div>

<div id="buttons">
	<a asp-action="Index">Назад</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
